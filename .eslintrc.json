{
    "env": {
        "node": true,
        "es6": true
    },
    "plugins": ["import", "lodash", "node"], 
    "extends": ["eslint:recommended",
                "plugin:import/errors",
                "plugin:import/warnings",
                "plugin:lodash/recommended",
                "plugin:node/recommended"],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "lodash/import-scope": "off"
    },
    "globals": {
        "$": false,
        "after": false,
        "before": false,
        "describe": false,
        "it": false
    }
}
